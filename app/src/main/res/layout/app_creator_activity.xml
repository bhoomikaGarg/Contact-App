<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/white"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >

        <ImageView
            android:id="@+id/imgCreatorimg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:scaleType="centerCrop"
            android:src="@drawable/pic_bhoomika" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3.5">

            <TextView
                android:id="@+id/txtMyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="BHOOMIKA GARG"
                android:textColor="#000000"
                android:layout_marginTop="7dp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtMyId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_email"
                android:layout_below="@id/txtMyName"
                android:drawablePadding="10dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:layout_marginTop="8dp"
                android:paddingLeft="8dp"
                android:text="bhoomika.garg.9@gmail.com"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtMyId"
                android:drawablePadding="5dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/linkedin"
                android:padding="8dp"
                android:text="@string/bhoomika_linkedin"
                android:textColor="#357a38"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </LinearLayout>

